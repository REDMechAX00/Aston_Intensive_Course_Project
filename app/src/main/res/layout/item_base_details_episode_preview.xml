<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_ripple_background"
    android:columnCount="2"
    android:orientation="horizontal"
    android:padding="@dimen/app_indent_normal"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        style="@style/AppTextNormal.ItemTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_item_episode_name"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_base_details_episode_preview_name"
        style="@style/AppTextNormal.ItemTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_marginStart="@dimen/app_indent_big"
        android:layout_marginEnd="@dimen/app_indent_big"
        android:textStyle="bold"/>

    <TextView
        style="@style/AppTextNormal.ItemTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_indent_normal"
        android:text="@string/text_item_episode"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_base_details_episode_preview_episode"
        style="@style/AppTextNormal.ItemTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_marginStart="@dimen/app_indent_big"
        android:layout_marginTop="@dimen/app_indent_normal"
        android:layout_marginEnd="@dimen/app_indent_big"
        app:maxLines="3" />

</GridLayout>